DEFINE_ACTION_FUNCTION setup_sounds
BEGIN
  LAUNCH_ACTION_FUNCTION get_directory
    STR_VAR
    location
    RET
    directory
  END

  ACTION_IF is_bg2
  BEGIN
    LAUNCH_ACTION_FUNCTION HANDLE_AUDIO
      STR_VAR
      audio_path	= "%directory%/bg2"
      oggdec_path	= "bin"
      sox_path		= "bin"
    END
  END
END	// setup_sounds


